@model SistemaUniversidadv1._0.Models.ESTUDIANTEMATERIAEXAMEN

@{
    ViewBag.Title = "Calificar Examen";
}

<div class="container">
    <h2>Calificar Examen</h2>
    <div class="card">
        <div class="card-header">
            @if (Model.ESTUDIANTE != null)
            {
                <h4>Estudiante: @Model.ESTUDIANTE.nombre_estudiante @Model.ESTUDIANTE.apellido_estudiante</h4>
                <h5>Legajo: @Model.ESTUDIANTE.numero_legajo</h5>
            }
            else
            {
                <h4>Estudiante no encontrado.</h4>
            }
        </div>
        <div class="card-body">
            @using (Html.BeginForm("CalificarExamen", "EstudianteMateriaExamen", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(m => m.id_estudiante_materia_examen)
                @Html.HiddenFor(m => m.estudiante_id)
                @Html.HiddenFor(m => m.materia_id)
                @Html.HiddenFor(m => m.CONDICIONESTUDIANTEMATERIA.nombre_condicion)

                <div class="row">
                    <!-- Primera columna -->
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            @Html.LabelFor(m => m.examen1, "Primer Examen", new { @class = "control-label" })
                            @Html.TextBoxFor(m => m.examen1, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.examen1, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group mb-3">
                            @Html.LabelFor(m => m.examen2, "Segundo Examen", new { @class = "control-label" })
                            @Html.TextBoxFor(m => m.examen2, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.examen2, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group mb-3">
                            @Html.LabelFor(m => m.examen3, "Tercer Examen", new { @class = "control-label" })
                            @Html.TextBoxFor(m => m.examen3, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.examen3, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group mb-3">
                            @Html.LabelFor(m => m.examen_integrador, "Examen Integrador", new { @class = "control-label" })
                            @Html.TextBoxFor(m => m.examen_integrador, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.examen_integrador, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group mb-3">
                            @Html.LabelFor(m => m.examen_final, "Examen Final", new { @class = "control-label" })
                            @Html.TextBoxFor(m => m.examen_final, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.examen_final, "", new { @class = "text-danger" })
                        </div>


                    </div>

                    <!-- Segunda columna -->
                    <div class="col-md-6">


                        <div class="form-group mb-3">
                            @Html.LabelFor(m => m.recuperatorio_examen1, "Recuperatorio 1er Examen", new { @class = "control-label" })
                            @Html.TextBoxFor(m => m.recuperatorio_examen1, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.recuperatorio_examen1, "", new { @class = "text-danger" })
                        </div>


                        <div class="form-group mb-3">
                            @Html.LabelFor(m => m.recuperatorio_examen2, "Recuperatorio 2do Examen", new { @class = "control-label" })
                            @Html.TextBoxFor(m => m.recuperatorio_examen2, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.recuperatorio_examen2, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group mb-3">
                            @Html.LabelFor(m => m.recuperatorio_examen3, "Recuperatorio 3er Examen", new { @class = "control-label" })
                            @Html.TextBoxFor(m => m.recuperatorio_examen3, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.recuperatorio_examen3, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group mb-3">
                            @Html.LabelFor(m => m.nota_final, "Nota Final de Materia", new { @class = "control-label" })
                            @Html.TextBoxFor(m => m.nota_final, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.nota_final, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group mb-3">
                            @Html.LabelFor(m => m.condicion_estudiante_materia_id, "Condición de la Materia", new { @class = "control-label" })
                            @Html.DropDownListFor(m => m.condicion_estudiante_materia_id, (IEnumerable<SelectListItem>)ViewBag.Condiciones,
                                "Seleccione una condición",
                                new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.condicion_estudiante_materia_id, "", new { @class = "text-danger" })
                        </div>




                    </div>
                </div>

                <div class="form-group mt-3">
                    <button type="submit" class="btn btn-primary">Guardar Calificaciones</button>
                    @Html.ActionLink("Volver", "EstudiantesPorMateria", "Profesor", new { idMateria = Model.materia_id }, new { @class = "btn btn-secondary" })
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(document).ready(function () {
            // Validación de notas (opcional)
            $('input[type="text"]').on('input', function () {
                var value = $(this).val();
                if (value !== '' && (isNaN(value) || value < 0 || value > 10)) {
                    $(this).addClass('is-invalid');
                } else {
                    $(this).removeClass('is-invalid');
                }
            });
        });
    </script>
}